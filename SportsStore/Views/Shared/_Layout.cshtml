<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width">
    <link rel="stylesheet" asp-href-include="lib/bootstrap/dist/css/bootstrap.min.css"/>
    <title>SportsStore</title>
</head>
<body>
<div class="navbar navbar-expand-sm bg-primary" role="navigation">
    <label style="width: 10%; vertical-align: center">SPORTS STORE</label>
    <div class="text-right" style="width: 90%">
        @await Component.InvokeAsync("CartSummary")
    </div>
</div>
<div class="row m-1 p-1">
    <div id="categories" class="col-3">
        @await Component.InvokeAsync("NavigationMenu")
    </div>
    <div class="col-9">
        @RenderBody()
    </div>
</div>
</body>
</html>